<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="mathOnFingers.Pages.Page2">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition/>
            <RowDefinition/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <Label x:Name="mathExampleLable" FontSize="52" TextColor="Black" FontAttributes="Bold" Grid.Row="1" Grid.Column="1"
               HorizontalOptions="Center" VerticalOptions="Center"/>
        <Label x:Name="winCountLable" FontSize="52" TextColor="Black" FontAttributes="Bold" Grid.Row="0" Grid.Column="2"
               HorizontalOptions="Center" VerticalOptions="Center"/>
        <Button x:Name="firstAnswerButton" Text="1" Clicked="firstAnswerButton_Clicked"  Grid.Row="2" Grid.Column="0" FontSize="32"/>
        <Button x:Name="secondAnswerButton" Text="2" Clicked="secondAnswerButton_Clicked" Grid.Row="2" Grid.Column="1" FontSize="32"/>
        <Button x:Name="thirdAnswerButton" Text="3" Clicked="ThirdAnswerButton_Clicked" Grid.Row="2" Grid.Column="2" FontSize="32"/>
    </Grid>
</ContentPage>